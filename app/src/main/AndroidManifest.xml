<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mimoh.leavemanagementtrial">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/leavemodule_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/leavemodule_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.LeaveManagement"
        android:usesCleartextTraffic="true"
        tools:ignore="UnusedAttribute">
        <activity android:name="com.mimoh.leavemanagementtrial.activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mimoh.leavemanagementtrial.activity.PasswordChangeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mimoh.leavemanagementtrial.activity.LeaveActivity"
            android:label="@string/title_activity_leave"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.LeaveManagement.NoActionBar" />
        <activity
            android:name="com.mimoh.leavemanagementtrial.activity.HomepageActivity"
            android:label="@string/title_activity_homepage"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.LeaveManagement.NoActionBar" />
        <activity
            android:name="com.mimoh.leavemanagementtrial.activity.LoginActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>